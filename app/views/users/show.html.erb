<div class="container">
    <div class="row">
      <div class="col-md-8">
      <h1>
        <%= gravator_for @user %>
        <%= @user.name %>
      </h1>

      <%= render 'follow_form' if signed_in? %>
      <h2>Feeds</h2>
      <%= render 'shared/feed',:feed_items => @microposts%>
      </div>

    <div class="col-md-4 sidebar">
      <strong>Name</strong> <%= @user.name %><br/>
      <strong>URL</strong> <%= link_to user_path(@user),user_path(@user) %><br/>
      <strong>Microposts</strong> <%= @user.microposts.count %>
      <%= render 'shared/stats' %>
    </div>
    </div>
</div>

