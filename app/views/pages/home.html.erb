<% if signed_in? %>
    <table>
      <tr>
        <td>
          <h1>What's up</h1>
          <%= render 'shared/micropost_form'%>
          <%= render 'shared/feed'%>
        </td>
        <td class="sidebar">
          <%= render 'shared/user_info' %>
          <%= render 'shared/stats' %>
        </td>
      </tr>
    </table>
<% else %>
<%= link_to "Sign up now!", signup_path %>
<% end %>